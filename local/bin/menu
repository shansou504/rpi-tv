#!/bin/bash

pkill -f antimicrox
antimicrox --hidden --profile ~/controller1.gamecontroller.amgp &

option=$(whiptail --title "Menu" --menu "Programs" $(tput lines) $(tput cols) 7 "1" "RetroArch" "2" "Kodi" "3" "Raspi-Config" "4" "System Update" "5" "Logout" "6" "Reboot" "7" "Shutdown" 3>&1 1>&2 2>&3)

case $option in
	"1") startretroarch;;
	"2") startkodi;;
	"3") startraspiconfig;;
	"4") startupdate;;
	"5") openbox --exit;;
	"6") systemctl reboot;;
	"7") systemctl poweroff;;
esac
